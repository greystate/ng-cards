<!DOCTYPE html>
<html lang="en" ng-app="Cards">
<head>
	<meta charset="utf-8">
	<title>Cards, like, with Angular</title>

	<link rel="stylesheet" href="/css/xcards.css">
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
	
	<div class="feature" ng-controller="CardController">
		<div class="card" ng-repeat="card in cards">
			<h1><a href="#" editable-text="card.title">{{ card.title }}</a></h1>
		
			<ul>
				<li ng-repeat="task in card.tasks" ng-class="{done: task.done}">
					<input type="checkbox" ng-model="task.done" ng-checked="task.done" />
					<a href="#" editable-text="task.title">{{ task.title }}</a>
					<span>{{ task.points }}</span>
				</li>
			</ul>
		
			<p class="stats">
				<span class="assignee">
					<a href="#edit-assignee" editable-select="card.assignee" e-ng-options="e.initials for e in employees">{{ card.assignee }}</a>
				</span>
				<span class="points">{{ card.pointsLeft() }}</span>
			</p>
		</div>
		
		<button class="new" ng-click="new()">New Card</button>
	</div>

<script src="/scripts/angular.min.js"></script>
<script src="/scripts/libs.min.js"></script>
<script src="/scripts/app.js"></script>

</body>
</html>