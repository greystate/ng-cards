<!DOCTYPE html>
<html lang="en" ng-app="Cards">
<head>
	<meta charset="utf-8">
	<title>Cards, like, with Angular</title>
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>

	<div class="card" ng-controller="CardController">
		<h2><a href="#" editable-text="card.title">{{ card.title }}</a></h2>
		<a href="#" editable-select="card.assignee" e-ng-options="e.initials for e in employees">{{ card.assignee }}</a>

		<ul>
			<li ng-repeat="task in card.tasks"><a href="#" editable-text="task.title">{{ task.title }}</a></li>
		</ul>
	</div>


<script src="/scripts/angular.min.js"></script>
<script src="/scripts/libs.min.js"></script>
<script src="/scripts/app.js"></script>

</body>
</html>