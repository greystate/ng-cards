<!DOCTYPE html>
<html lang="en" ng-app="Cards">
<head>
	<meta charset="utf-8">
	<title>Cards, like, with Angular</title>

	<link rel="stylesheet" href="/css/xcards.css">
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
	
	<div class="feature" ng-controller="CardController">
		<div class="card" ng-class="{'done' : card.isComplete()}" ng-repeat="card in cards">
			<h1><a href="#" editable-text="card.title" buttons="no">{{ card.title }}</a></h1>
		
			<ul>
				<li ng-repeat="task in card.tasks" ng-class="{done: task.done}">
					<input type="checkbox" ng-model="task.done" ng-checked="task.done" />
					<a href="#" editable-text="task.title" buttons="no">{{ task.title }}</a>
					<span><a href="#" ng-model="task.points" editable-select="task.points" buttons="no" e-ng-options="v for v in taskPoints">{{ task.points }}</a></span>
				</li>
				<li class="new"><a class="editable-click" href="#" ng-click="card.addTask('New task', 5)">Add task...</a></li>
			</ul>
		
			<p class="stats">
				<span class="assignee">
					<a href="#edit-assignee" model="card.assignee" editable-select="card.assignee" buttons="no" e-ng-options="e.initials as e.name for e in employees">{{ card.assignee }}</a>
				</span>
				<span class="points">{{ card.pointsLeft() }}</span>
			</p>
		</div>
		
		<button class="new" ng-click="new()" title="Add another Card...">&#x002B;</button>
	</div>

<script src="/scripts/angular.min.js"></script>
<script src="/scripts/libs.min.js"></script>
<script src="/scripts/app.js"></script>

</body>
</html>